}
.cu-top {
  background: #fff;
}
.cu-top image {
    width: 37rpx;
    height: 37rpx;
    margin: 0 26rpx 0 0;
}
.cu-top .email-icon {
    width: 38rpx;
    height: 25rpx;
}
.cu-top .cu-top-li {
    padding: 0 27rpx;
    height: 94rpx;
    position: relative;
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-align: center;
    -webkit-align-items: center;
